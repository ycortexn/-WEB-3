    <script>
        // Простая функция для поиска (в реальном проекте будет перенаправлять на страницу поиска)
        document.querySelector('.search-box button').addEventListener('click', function() {
            const searchTerm = document.querySelector('.search-box input').value;
            if (searchTerm.trim() !== '') {
                alert('Поиск: ' + searchTerm + '\n\nВ реальном проекте здесь будет перенаправление на страницу с результатами поиска.');
            }
        });
        
        // Добавляем обработчик нажатия Enter в поле поиска
        document.querySelector('.search-box input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                document.querySelector('.search-box button').click();
            }
        });
    </script>
